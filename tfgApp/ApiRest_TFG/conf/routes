# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                        controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Admin

    #Usuario
    POST     /usuarios               controllers.UsuarioController.create(request:Request)
    DELETE   /usuarios               controllers.UsuarioController.delete(request:Request)
    GET      /usuarios               controllers.UsuarioController.listUsuarios(request:Request)

    #Resultado
    DELETE    /resultados                                   controllers.ResultadoController.deleteAll(request:Request)
    GET       /resultados                                   controllers.ResultadoController.getAllResultados(request:Request)

    #Nota
    DELETE    /notas                                        controllers.NotaController.deleteAll(request:Request)
    GET       /notas                                        controllers.NotaController.getAllNotas(request:Request)

    #Recomendacion
    GET       /recomendaciones                              controllers.RecomendacionController.getAllRecomendaciones(request:Request)
    DELETE    /recomendaciones                              controllers.RecomendacionController.deleteAll(request:Request)




#User

    #Usuario
    GET         /usuarios/:id          controllers.UsuarioController.retrieve(request:Request,id:Int)
    DELETE      /usuarios/:id          controllers.UsuarioController.deleteById(request:Request,id:Int)
    PUT         /usuarios/:id          controllers.UsuarioController.update(request:Request,id:Int)
    PATCH       /usuarios/:id          controllers.UsuarioController.updatePass(request:Request,id:Int)

    #Resultado
    DELETE      /usuarios/:idUsuarios/resultados/:id         controllers.ResultadoController.deleteById(request:Request,idUsuarios:Int,id:Int)
    GET         /usuarios/:idUsuarios/resultados/:id         controllers.ResultadoController.retrieve(request:Request,idUsuarios:Int,id:Int)
    PATCH       /usuarios/:idUsuarios/resultados/:id         controllers.ResultadoController.updateTipo(request:Request,idUsuarios:Int,id:Int)

    POST        /usuarios/:idUsuarios/resultados              controllers.ResultadoController.create(request:Request,idUsuarios:Int)
    DELETE      /usuarios/:idUsuarios/resultados              controllers.ResultadoController.delete(request:Request,idUsuarios:Int)
    GET         /usuarios/:idUsuarios/resultados              controllers.ResultadoController.listResultadosByUsuario(request:Request,idUsuarios:Int)

    #Nota
    DELETE     /usuarios/:idUsuarios/resultados/:idResultados/notas/:id        controllers.NotaController.deleteById(request:Request,idUsuarios:Int,idResultados:Int,id:Int)
    GET        /usuarios/:idUsuarios/resultados/:idResultados/notas/:id        controllers.NotaController.retrieve(request:Request,idUsuarios:Int,idResultados:Int,id:Int)
    PUT        /usuarios/:idUsuarios/resultados/:idResultados/notas/:id        controllers.NotaController.update(request:Request,idUsuarios:Int,idResultados:Int,id:Int)

    POST       /usuarios/:idUsuarios/resultados/:idResultados/notas             controllers.NotaController.create(request:Request,idUsuarios:Int,idResultados:Int)
    DELETE     /usuarios/:idUsuarios/resultados/:idResultados/notas             controllers.NotaController.delete(request:Request,idUsuarios:Int,idResultados:Int)
    GET        /usuarios/:idUsuarios/resultados/:idResultados/notas             controllers.NotaController.listNotasByResultado(request:Request,idUsuarios:Int,idResultados:Int)

    #Recomendacion
    GET        /usuarios/:idUsuarios/resultados/:idResultados/recomendaciones            controllers.RecomendacionController.retrieve(request:Request,idUsuarios:Int,idResultados:Int)

    #Formulario
    POST       /usuarios/:idUsuarios/formularios                               controllers.RecomendacionController.retrieve(request:Request,idUsuarios:Int,idResultados:Int)


